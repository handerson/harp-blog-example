<% var posts = Object.keys(public.posts._data);%>

<nav class="pagination"> 
    <% var currentIndex = posts.indexOf(path); %>

    <% if(posts[0] != path) { %>
        <% currentIndex = posts.indexOf(path); %>
        <a href="<%-root%>posts/<%=posts[currentIndex-1]%>" role="button" >Newer</a>
    <% } else { %>
        <a role="button" class="outline">Newer</a>
    <% } %>

    <% if(posts[posts.length-1] != path){ %>
        <a href="<%-root%>posts/<%=posts[currentIndex+1]%>" role="button">Older</a>
    <% } else { %>
        <a role="button" class="outline">Older</a>
    <% } %>
</nav>