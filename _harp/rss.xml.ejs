<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title><%- title %></title>
  <link><%- url %></link>
  <description><%- description %></description>
  <link rel="alternate" type="text/html" href="<%- url %>" />
  <link rel="self" type="application/atom+xml" href="<%- url %>rss.xml" />
  <id>tag:<%- url %>,2022-12-09:223457</id>
  <updated><%- new Date().toUTCString() %></updated>

  <% for(slug in public.posts._data) { %>
  <% var post = public.posts._data[slug] %>
  <entry>
    <title><%- post.title %></title>
    <link rel="alternate" type="text/html" href="<%- url %>posts/<%- slug %>" />
    <id><%- url%>posts/<%= slug %></id>

    <published><%- new Date(post.date).toUTCString() %></published>

    <content type="html" xml:lang="en" xml:base="<%- url %>"><![CDATA[<%- partial("/posts/" + slug) %>]]></content>
  </entry>
  <% } %>
</feed>